            %div.group__name Sample_name2
            %div.group__message Sample_message2
        %div.group
          %a.group(href='#link')
            %div.group__name Sample_name3
            %div.group__message Sample_message3
        %div.group
          %a.group(href='#link')
            %div.group__name Sample_name4
            %div.group__message Sample_message4
    %div.chat
      %div.header
        %div.left-header
          %div.left-header__title Title
          %ul.left-header__members members...
          %li.member member--------------
        %div.right-header
          %a.right-header__button(href='#link') Edit
      %div.messages
        %div.message
          %div.upper-message
            %div.upper-message__name Ryosukemaehira
            %div.upper-message__date 2018/05/10 14:06
          %div.lower-message test_test_test
        %div.message
          %div.upper-message
            %div.upper-message__name Ryosukemaehira
            %div.upper-message__date 2018/05/10 14:06
