          %div.lower-message test_test_test
        %div.message
          %div.upper-message
            %div.upper-message__name Ryosukemaehira
            %div.upper-message__date 2018/05/10 14:06
          %div.lower-message test_test_test
      %div.bottom__bar
        %form.form
          %input.form__message(placeholder='type a message')
          %div.form__mask
            %a(href='#link')
              = fa_icon("image")
          %button.button__send Send
  = yield
